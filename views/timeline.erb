<link type="text/css" rel="stylesheet" href='mail.css' />


<ul>
  <% if session[:user] == nil %>
    <li><a href="/">Home</a></li>
    <li><a href="/signup">Sign up</a></li>
    <li style="float:right"><a class="active" href="/login">Log in</a></li>
  <% elsif session[:user] != nil %>
    <li>Logged in as: <a href="/account"><%= session[:user].email %></a></li>
    <li style="float:right"><a class="active" href="/">Log out</a></li>
  <% end %>
</ul>

<div id="searchbar">
  <form action="/individ" method="puts">
    <input type="text" name="username" placeholder="username">
      <input type="submit" value="Find User"><br>
  </form>
</div>


<div>
  <container>
    <div class="tl_grid">
      <div>
        <% $all_post.each do |post| %>
        <div class="cells">
        <form action="/individ" method="puts"><input type="submit" name="username" value="<%= post.username %>"></form><br>
        <%= post.title %><br>
        <img src="<%= post.image_url %>" style="height:70%; width:100%;"><br><br>
        <%= post.content %><br><br>
        </div>
        <% end %>
      </div>
    </div>
  </container>
</div>
